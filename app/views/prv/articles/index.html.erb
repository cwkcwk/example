<h3>
  Статьи
</h3>

<%= link_to 'Добавить', new_prv_article_path, class: 'btn btn-small btn-info' %>
<div class="space-10"></div>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Название</th>
    <th>Опубликована?</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.published ? 'Да' : 'Нет' %></td>
        <td>
          <%= link_to edit_prv_article_path(article), class: 'btn btn-info btn-mini' do %>
              <i class="icon-edit bigger"></i>
          <% end %>
        </td>
        <td>
          <%= link_to prv_article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-mini' do %>
              <i class="icon-trash bigger"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>