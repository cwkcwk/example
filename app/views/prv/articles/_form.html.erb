<%= form_for [:prv, @article], html: {class: 'form-horizontal'} do |f| %>

    <% if @article.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <legend>Статья</legend>

    <div class="row-fluid">

      <div class="control-group">
        <%= f.label :title, class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :title %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :preview, class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :preview, rows: 5, style: 'width: 400px;' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :body, class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :body, rows: 10, style: 'width: 400px;' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :published, class: 'control-label' %>
        <div class="controls">
          <%= f.check_box :published %>
          <label class="lbl"></label>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :image, class: 'control-label' %>
        <div class="controls">

          <%= f.file_field :image %>
          <%= image_tag(asset_path(f.object.image.url(:thumb))) %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Сохранить', class: 'btn btn-success btn-mini' %>
    </div>

<% end %>
