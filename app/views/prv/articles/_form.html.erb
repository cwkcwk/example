<%= form_for [:prv, @article], html: {class: 'form-horizontal'} do |f| %>

    <% if @article.errors.any? %>
        <div id="error_explanation" class="alert alert-error">
          <ul>
            <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <legend>Статья</legend>

    <div class="row-fluid">

      <div class="control-group">
        <%= f.label 'Заголовок', class: 'control-label' %>
        <div class="controls">
          <%= f.text_field :title %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'Вступление', class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :preview, style: 'width: 500px; height: 300px;' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'Статья', class: 'control-label' %>
        <div class="controls">
          <%= f.text_area :body, style: 'width: 500px; height: 300px;'  %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'Опубликовать?', class: 'control-label' %>
        <div class="controls">
          <%= f.check_box :published, style: 'position: absolute!important; z-index:33!important;' %>
          <label class="lbl"></label>
        </div>
      </div>

      <div class="control-group">
        <%= f.label 'Картинка', class: 'control-label' %>
        <div class="controls">

          <%= f.file_field :image %>
          <%= image_tag(asset_path(f.object.image.url(:thumb))) %>
        </div>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Сохранить', class: 'btn btn-success btn-mini' %>
    </div>

<% end %>
