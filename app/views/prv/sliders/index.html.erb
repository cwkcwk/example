<h3>
  Слайды
</h3>

<%= link_to 'Добавить', new_prv_slider_path, class: 'btn btn-small btn-info' %>
<div class="space-10"></div>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>#</th>
    <th>Название</th>
    <th>Активен?</th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>

  <% @sliders.each do |slider| %>
      <tr>
        <td><%= slider.id %></td>
        <td><%= slider.title %></td>
        <td><%= slider.is_active ? "<label class='label label-success'>Активен</label>".html_safe : "<label class='label label-warning'>Не активен</label>".html_safe %></td>
        <td>
          <%= link_to edit_prv_slider_path(slider), class: 'btn btn-info btn-mini' do %>
              <i class="icon-edit bigger"></i>
          <% end %>
        </td>
        <td>
          <%= link_to prv_slider_path(slider), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-mini' do %>
              <i class="icon-trash bigger"></i>
          <% end %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
