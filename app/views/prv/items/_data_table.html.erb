<tbody>

<% @prv_items.where(category_id: c).each do |prv_item| %>
    <tr>
      <td><%= prv_item.title %></td>
      <td><%= prv_item.category.name %></td>
      <td><%= prv_item.item_attachments.count %></td>
      <td>
        <div class="row-fluid">
          <div class="span6">
            <%= link_to change_order_prv_item_path(prv_item, direction: 1), remote: true do  %>
                <i class="icon-arrow-up"></i>
            <% end %>

            <%= link_to change_order_prv_item_path(prv_item, direction: -1), remote: true do  %>
                <i class="icon-arrow-down"></i>
            <% end %>
          </div>
          <div class="span6">
            <label><%= prv_item.order_id %></label>
          </div>
        </div>
      </td>
      <td>
        <%= link_to edit_prv_item_path(prv_item), class: 'btn btn-info btn-mini' do %>
            <i class="icon-edit bigger"></i>
        <% end %>
      </td>
      <td>
        <%= link_to prv_item_path(prv_item), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-mini' do %>
            <i class="icon-trash bigger"></i>
        <% end %>
      </td>
    </tr>
<% end %>

</tbody>