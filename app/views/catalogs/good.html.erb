<h1>
  <%= @good.title %>
</h1>

<div class="row-fluid">
  <div class="span6">

    <div style="width: 300px; height: 250px;overflow: hidden;">

      <%= image_tag(asset_path(@good.item_attachments.first.image.url), width: 300, height: 600, class: 'preview') %>

    </div>

    <ul class="inline pics">
      <% @good.item_attachments.each do |pic| %>
          <li>
            <%= image_tag(pic.image.url(:thumb)) %>
          </li>
      <% end %>
    </ul>

  </div>

  <div class="span6">
    <p>
      <%= @good.description %>
    </p>

    <div class="space-20"></div>

    <div class="row-fluid">
      <table class="table table-bordered" style="width: 95%;">
        <% @good.item_properties.each do |prop| %>
            <tr>
              <td style="width: 30%">
                <%= prop.name %>
              </td>
              <td>
                <%= prop.property %>
              </td>
            </tr>
        <% end %>
      </table>

      <% if @good.item_sizes.any? %>
          <legend>Размеры</legend>

          <% @good.item_sizes.each_slice(6) do |size_group| %>
              <div class="row-fluid">
                <% size_group.each do |size| %>
                    <div class="span2">
                      <ul class="unstyled scales">
                        <li class="scale-title">

                          <label class="lbl align-center">
                            <%= size.scale %>
                          </label>

                        </li>

                        <% size.size_scales.each do |scale| %>

                            <li class="scale-element">
                              <label class="align-center">
                                <%= scale.scale %>
                              </label>
                            </li>

                        <% end %>

                      </ul>
                    </div>

                <% end %>

              </div>
              <div class="space-6"></div>
          <% end %>
      <% end %>

    </div>
  </div>
</div>
<div class="space-30"></div>