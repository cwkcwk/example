<head>
  <title>Горизонт - Вход</title>

  <%= stylesheet_link_tag media: "all", "data-turbolinks-track" => true %>

</head>

<body class="login-layout">
<div class="main-container container-fluid">
  <div class="main-content">
    <div class="row-fluid">
      <div class="span12">
        <div class="login-container">
          <div class="row-fluid">
            <div class="center">
              <h1>
                <span class="white">&copy; Горизонт</span>
              </h1>
            </div>
          </div>

          <div class="space-6"></div>

          <div class="row-fluid">
            <div class="position-relative">
              <div id="login-box" class="login-box visible widget-box no-border">
                <div class="widget-body">
                  <div class="widget-main">
                    <h4 class="header blue lighter bigger">
                      <i class="icon-coffee green"></i>
                      Введите логин и пароль
                    </h4>

                    <div class="space-6"></div>

                    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

                        <fieldset>
                          <label>
            <span class="block input-icon input-icon-right">
                <%= f.email_field :email, :autofocus => true, :class => 'span12', :placeholder => 'Логин' %>
              <i class="icon-user"></i>
            </span>
                          </label>

                          <label>
            <span class="block input-icon input-icon-right">
                <%= f.password_field :password, :class => 'span12', :placeholder => 'Password' %>
              <i class="icon-lock"></i>
			</span>
                          </label>

                          <div class="clearfix">
                            <%= f.submit 'Войти', :class => 'width-35 pull-right btn btn-small btn-primary' %>
                          </div>

                          <div class="space-4"></div>
                        </fieldset>

                    <% end %>

                  </div>
                  <!--/widget-main-->

                </div>
                <!--/widget-body-->
              </div>

            </div>
            <!--/position-relative-->

          </div>
        </div>
      </div>
      <!--/.span-->
    </div>
    <!--/.row-fluid-->
  </div>
</div>

</body>
