<div class="row-fluid">

  <div class="span5">
    <h1>
      <%= @article.title %>
    </h1>

    <div class="row-fluid">
      <%= image_tag(asset_path(@article.image.url(:large))) %>
    </div>

  </div>


  <div class="span7">

    <div class="row-fluid">
      <div class="span10">
        <h4>
          <%= @article.preview.html_safe %>
        </h4>
      </div>
    </div>

    <div class="space-20"></div>

    <div class="row-fluid">
      <div class="span10">
        <p>
          <%= @article.body.html_safe %>
        </p>
      </div>
    </div>

  </div>

</div>
